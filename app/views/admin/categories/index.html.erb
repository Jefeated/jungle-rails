<section class="admin-category-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ Categories', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default category">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
        </tr>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
        </tr>
      <% end %>
      </thead>
      <tbody>
        
      </tbody>
    </table>

  </div>

</section>
